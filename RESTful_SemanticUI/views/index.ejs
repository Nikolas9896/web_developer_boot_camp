<% include partials/header %>
<div class="ui main text container">
    <div class="ui huge header">
        RESful Mykogram App
    </div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% mykos.forEach((myko) => { %>

                <div class="item">
                   <div class="image">
                        <img src="<%= myko.image %>">
                    </div>
                    <div class="content">
                            <a class="header" href="/mykos/<%= myko._id %>"><%= myko.title %></a>
                    </div>
                    <div class="meta">
                            <span><%= myko.created.toDateString() %></span>
                    </div>
                   <div class="description">
                        <% if(myko.body.length < 100){ %>
                            <p><%- myko.body %> </p>
                        <% } else { %>
                            <p><%- myko.body.substring(0,100) %>...</p>
                        <% } %>  
                   </div>
                   <div class="extra">
                        <a class="ui floated blue basic button" href="/mykos/<%= myko._id %>">
                            Read More<i class="right chevron icon"></i>
                        </a>
                   </div>                       
                    
                </div>
            
            
            <% }); %>
        </div>
    </div>
</div>


<% include partials/footer %>