<% include partials/header %>
<h1>Index Page!</h1>

<% mykos.forEach((myko) => { %>

    <div>
        <h2><%= myko.title %></h2>
        <img src="<%= myko.image %>">
        <span><%= myko.created %></span>
        <p><%= myko.body.substring(0, 100) %>...</p>
        <a class="ui blue basic button" href="/mykos/<%= myko._id %>">Read More</a>
    </div>


<% }); %>

<% include partials/footer %>