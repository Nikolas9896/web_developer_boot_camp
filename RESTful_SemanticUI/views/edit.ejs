<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit: <%= myko.title %></div>
    <form class="ui form" action="/mykos/<%=myko._id%>?_method=PUT" method="POST">
        <div class="field">
            <label for="title">Title</label>
            <input id="title" type="text" name="myko[title]" value="<%= myko.title %>">
        </div>
        <div class="field">
            <label for="image">Image URL</label>
            <input id="image" type="text" name="myko[image]" value="<%= myko.image %>">
        </div>
        <div class="field">
            <label for="description">Content</label>
            <textarea name="myko[body]" id="description" cols="10" rows="10"><%= myko.body %></textarea>
        </div>
         <input class="ui blue big basic button"type="submit">
    </form>
</div>



<% include partials/footer %>