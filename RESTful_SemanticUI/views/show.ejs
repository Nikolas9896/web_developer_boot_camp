<% include partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header"><%= myko.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= myko.image%>">
            <div class="content">
                <span><%= myko.created.toDateString() %></span>
            </div>
            <div class="description">
                <p><%- myko.body %></p>
            </div>
            <a id="edit" name="edit" href="/mykos/<%= myko._id %>/edit" class="ui orange basic button">Edit</a>
            <form id="delete" name="delete" action="/mykos/<%= myko._id%>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>



<% include partials/footer %>